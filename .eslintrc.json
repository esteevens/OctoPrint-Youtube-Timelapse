{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "I18n": false,
        "require": false,
        "global": false,
        "define": false,
        "module": false,
        "ReactDOM": false,
        "allTranslations": false,
        "locale": false,
        "trans": false,
        "ajaxForm": false,
        "DataTableInit": false
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/no-deprecated": [0],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
}
